{% extends 'tictactoe/base.jinja2' %}
{% block body_title %}Let's Play Tic Tac Toe!{% endblock %}
{% block text %}<p id="start_text">Starting your game...</p>{% endblock %}

{% block body_script_extra %}
<script type="text/javascript">ttt_data={{data_json | safe}};</script>
<script type="text/javascript">
if (ttt_data.url) {
    window.location = ttt_data.url + "?format=html";
} else {
    $('#start_text').replaceWith(
        '<p>There was a problem starting your game. <a href="/">Start over?</a></p>');
}
</script>
{% endblock %}

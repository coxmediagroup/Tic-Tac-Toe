<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:TicTacToe.Controls"
        Title="Tic Tac Toe" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize"
        x:Name="self" Icon="Resources/icon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Grid>
                <Image Source="/Resources/cross.png" Stretch="None"
                   Visibility="{Binding ElementName=self,Path=Vm.Player1X, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Image Source="/Resources/circle.png" Stretch="None"
                   Visibility="{Binding ElementName=self,Path=Vm.Player1O, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
            <TextBlock Text="{Binding ElementName=self,Path=Vm.Game.Player1.Name}" HorizontalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
        <controls:GameBoard Grid.Column="1"/>
        <StackPanel Grid.Column="2">
            <Grid>
                <Image Source="/Resources/cross.png" Stretch="None"
                   Visibility="{Binding ElementName=self,Path=Vm.Player2X, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Image Source="/Resources/circle.png" Stretch="None"
                   Visibility="{Binding ElementName=self,Path=Vm.Player2O, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
            <TextBlock Text="{Binding ElementName=self,Path=Vm.Game.Player2.Name}" HorizontalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>

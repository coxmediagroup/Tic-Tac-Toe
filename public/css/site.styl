body
  margin-top 80px
  margin-left 20px
  margin-right 20px
.gameBoard
  margin-right auto
  margin-left auto
  width 300px
  height 300px
.gameRow
  height 100px
  width 300px
  border-bottom 4px solid
.gameColumn
  width 100px
  height 100px
  border-left 4px solid
  display inline-block
  padding 40px 
.noLeftBorder
  border-left 0px solid
.noBottomBorder
  border-bottom 0px solid
.playerImage
  width 300
  height 300px 
  padding 10px
  border 2px solid
  border-radius 10px
  display inline-block
  background-color #80B3FF
  text-align center
.playerImage img
  width 200px
  height 200px
  display inline-block
.playerImage div
  text-align center
.playerImage span
  font-family 'Indie Flower'
  font-size 2em
    img(src="../images/player2.jpg")
    .div
        span Player 2 
        .div 
            | (Computer for now maybe socket.io 2 player?)
i.fa.fa-mail-forward.fa-5x.text-danger.pull-right(ng-show = "currentPlayer == 2")
.gameBoard
    .gameRow
        .gameColumn.noLeftBorder(ng-click="move(0,0)")
            {{ game.gameBoard[0][0] }}
        .gameColumn(ng-click="move(0,1)")
            {{ game.gameBoard[0][1] }}
        .gameColumn(ng-click="move(0,2)")
            {{ game.gameBoard[0][2] }}
    .gameRow
        .gameColumn.noLeftBorder(ng-click="move(1,0)")
            {{ game.gameBoard[1][0] }}
        .gameColumn(ng-click="move(1,1)")
            {{ game.gameBoard[1][1] }}
        .gameColumn(ng-click="move(1,2)")
            {{ game.gameBoard[1][2] }}
    .gameRow.noBottomBorder
        .gameColumn.noLeftBorder(ng-click="move(2,0)")
            {{ game.gameBoard[2][0] }}
        .gameColumn(ng-click="move(2,1)")
            {{ game.gameBoard[2][1] }}
        .gameColumn(ng-click="move(2,2)")
            {{ game.gameBoard[2][2] }}


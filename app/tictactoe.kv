#:kivy 1.8.0

#:set DEFAULT_FONT 'fonts/Schoolbell.ttf'
#:set DEFAULT_FONT_SIZE '30sp'


<Button>:
    font_name: DEFAULT_FONT
    background_color: 1, 1, 1, 0
    color: 0, 0, 0, 1


<Label>:
    font_name: DEFAULT_FONT
    font_size: '35sp'
    bold: True
    markup: True


<TicTacToeFrame>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                size_hint: (.5, 1)
                text: "[color=c60f13]You[/color] " + root.player_text(1)
                font_size: DEFAULT_FONT_SIZE
            BoxLayout:
                padding: 20, (self.height-self.width+20)/2, 20, (self.height-self.width+20)/2
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                RelativeLayout:
                    Image:
                        size_hint: None, None
                        size: self.parent.width, self.parent.width
                        source: 'img/tic_tac_toe.png'
                    GridLayout:
                        pos: .141*self.parent.width, .145*self.parent.width
                        size_hint: None, None
                        size: .7*self.parent.width, .7*self.parent.width
                        cols: 3
                        spacing: .02*self.parent.width
                        Button:
                            text: root.square_label(8)
                            on_press: root.move(8, self)
                        Button:
                            text: root.square_label(7)
                            on_press: root.move(7, self)
                        Button:
                            text: root.square_label(6)
                            on_press: root.move(6, self)
                        Button:
                            text: root.square_label(1)
                            on_press: root.move(1, self)
                        Button:
                            text: root.square_label(0)
                            on_press: root.move(0, self)
                        Button:
                            text: root.square_label(5)
                            on_press: root.move(5, self)
                        Button:
                            text: root.square_label(2)
                            on_press: root.move(2, self)
                        Button:
                            text: root.square_label(3)
                            on_press: root.move(3, self)
                        Button:
                            text: root.square_label(4)
                            on_press: root.move(4, self)
            Label:
                size_hint: (.5, 1)
                text: "[color=2ba6cb]Hal[/color] " + root.player_text(2)
                font_size: DEFAULT_FONT_SIZE

#:kivy 1.8.0

#:set DEFAULT_FONT 'fonts/AnnieUseYourTelescope.ttf'
#:set DEFAULT_FONT_SIZE 30
#:set DEFAULT_FONT_COLOR (0, 0, 0, 1)

<TicTacToeFrame>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: "[color=c60f13]You[/color] " + root.player_text(1)
                markup: True
                color: DEFAULT_FONT_COLOR
                font_name: DEFAULT_FONT
                font_size: DEFAULT_FONT_SIZE
                bold: True
            Label:
                text: "[color=2ba6cb]Hal[/color] " + root.player_text(2)
                markup: True
                color: DEFAULT_FONT_COLOR
                font_name: DEFAULT_FONT
                font_size: DEFAULT_FONT_SIZE
                bold: True

#:kivy 1.8.0

#:set DEFAULT_FONT 'fonts/Schoolbell.ttf'
#:set DEFAULT_FONT_SIZE 30




<TicTacToeFrame>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                size_hint: (.5, 1)
                text: "[color=c60f13]You[/color] " + root.player_text(1)
                markup: True
                font_name: DEFAULT_FONT
                font_size: DEFAULT_FONT_SIZE
                bold: True
            BoxLayout:
                padding: 20, (self.height-self.width+20)/2, 20, (self.height-self.width+20)/2
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                RelativeLayout:
                    Image:
                        size_hint: None, None
                        size: self.parent.width, self.parent.width
                        source: 'img/tic_tac_toe.png'
                    GridLayout:
                        pos: .141*self.parent.width, .145*self.parent.width
                        size_hint: None, None
                        size: .7*self.parent.width, .7*self.parent.width
                        cols: 3
                        spacing: .02*self.parent.width
                        Button:
                            text: "8"
                            font_name: DEFAULT_FONT
                        Button:
                            text: "7"
                        Button:
                            text: "6"
                        Button:
                            text: "1"
                        Button:
                            text: "0"
                        Button:
                            text: "5"
                        Button:
                            text: "2"
                        Button:
                            text: "3"
                        Button:
                            text: "4"
            Label:
                size_hint: (.5, 1)
                text: "[color=2ba6cb]Hal[/color] " + root.player_text(2)
                markup: True
                font_name: DEFAULT_FONT
                font_size: DEFAULT_FONT_SIZE
                bold: True

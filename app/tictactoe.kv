#:kivy 1.8.0

#:set DEFAULT_FONT 'fonts/Schoolbell.ttf'
#:set DEFAULT_FONT_SIZE '30sp'


<Button>:
    font_name: DEFAULT_FONT
    background_color: 1, 1, 1, 0
    color: 0, 0, 0, 1


<Label>:
    font_name: DEFAULT_FONT
    font_size: '35sp'
    bold: True
    markup: True


<TicTacToeFrame>:
    orientation: 'vertical'
    wrapper: wrapper.__self__
    BoxLayout:
        id: wrapper
        orientation: 'horizontal'
        board_wrapper: board_wrapper.__self__
        player1_score: player1_score.__self__
        player2_score: player2_score.__self__
        Label:
            id: player1_score
            size_hint: (.5, 1)
            text: root.player_text(1)
            font_size: DEFAULT_FONT_SIZE
        BoxLayout:
            id: board_wrapper
            game_board: game_board.__self__
            orientation: 'vertical'
            padding: 20, 20, 20, (self.height-self.width+20)/2
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            board_text: board_text.__self__
            BoxLayout:
                id: board_text
                orientation: 'vertical'
                size_hint: (1, .15)
                go_first_label: go_first_label.__self__
                Label:
                    id: go_first_label
                    text: "[color=000000]You go first...[/color]"
            RelativeLayout:
                id: game_board
                game_board_buttons: game_board_buttons.__self__
                Image:
                    size_hint: None, None
                    size: self.parent.width, self.parent.width
                    source: 'img/tic_tac_toe.png'
                GridLayout:
                    id: game_board_buttons
                    pos: .141*self.parent.width, .145*self.parent.width
                    size_hint: None, None
                    size: .7*self.parent.width, .7*self.parent.width
                    cols: 3
                    spacing: .02*self.parent.width
                    # we need to do this so kivy doesn't ignore button ids
                    square8: square8.__self__
                    square7: square7.__self__
                    square6: square6.__self__
                    square5: square5.__self__
                    square4: square4.__self__
                    square3: square3.__self__
                    square2: square2.__self__
                    square1: square1.__self__
                    square0: square0.__self__
                    Button:
                        id: square8
                        text: root.square_label(8)
                        on_press: root.player_move(8, self)
                    Button:
                        id: square7
                        text: root.square_label(7)
                        on_press: root.player_move(7, self)
                    Button:
                        id: square6
                        text: root.square_label(6)
                        on_press: root.player_move(6, self)
                    Button:
                        id: square1
                        text: root.square_label(1)
                        on_press: root.player_move(1, self)
                    Button:
                        id: square0
                        text: root.square_label(0)
                        on_press: root.player_move(0, self)
                    Button:
                        id: square5
                        text: root.square_label(5)
                        on_press: root.player_move(5, self)
                    Button:
                        id: square2
                        text: root.square_label(2)
                        on_press: root.player_move(2, self)
                    Button:
                        id: square3
                        text: root.square_label(3)
                        on_press: root.player_move(3, self)
                    Button:
                        id: square4
                        text: root.square_label(4)
                        on_press: root.player_move(4, self)
        Label:
            id: player2_score
            size_hint: (.5, 1)
            text: root.player_text(2)
            font_size: DEFAULT_FONT_SIZE
